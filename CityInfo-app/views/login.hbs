                </li>
            {{/if}}
        </ul>
    </div>

</nav>
</div>

<br>
<br>
<br>
<main class="page contact-us-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">Login</h2>
            </div>
            <form class="form-signin" action="/auth/login" method="POST">
                <div class="form-group"><label>Email</label><input class="form-control" type="email" required name="email"></div>
                <div class="form-group"><label>Password</label><input class="form-control" type="password" required name="password"></div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Login</button></div>
                {{#if message}}
                    <h1>{{message}}</h1>
                {{/if}}
            </form>
        </div>
    </section>

</main>



