                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Essentials</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/contact-us">Contact</a>
            </li>
            {{#if user}}
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
