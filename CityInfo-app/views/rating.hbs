{{#if user}}
    <h1>Test</h1>
<div class="rate">
    <input type="radio" id="star5" name="rate" value="5" onclick="ratingSubmit(5)"/>
    <label for="star5" title="text">5 stars</label>
    <input type="radio" id="star4" name="rate" value="4" onclick="ratingSubmit(4)"/>
    <label for="star4" title="text">4 stars</label>
    <input type="radio" id="star3" name="rate" value="3" onclick="ratingSubmit(3)"/>
    <label for="star3" title="text">3 stars</label>
    <input type="radio" id="star2" name="rate" value="2" onclick="ratingSubmit(2)" />
    <label for="star2" title="text">2 stars</label>
    <input type="radio" id="star1" name="rate" value="1" onclick="ratingSubmit(1)"/>
    <label for="star1" title="text">1 star</label>
    <script>
        function ratingSubmit(rating_id) {
            let url = "http://localhost:5000/events/2/" + rating_id;
            fetch(url, {
                method: 'POST',
                headers: {
                    'content-type': 'application/json',
                    authorization: 'Bearer 123abc456def'
                },
            }).then(response => {
                console.log(response)
            }).catch(err => {
                console.log(err)
            })
        }
    </script>
